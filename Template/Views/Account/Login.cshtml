@model Template.Models.Table
@{
    ViewBag.Title = "Login";
}
<link href="~/assets/css/NewStyle.css" rel="stylesheet" />
<br />
<br />
<br />
<br />
<br />
<!-- ======= Contact Section ======= -->
<section id="contact" class="contact">
    <div class="container" data-aos="fade-up">

       
        <div class="row m-auto mt-1 d-flex justify-content-end" data-aos="fade-right" data-aos-delay="100">
  

            <div class="col-lg-12 mt-5 mt-lg-0" data-aos="fade-left" data-aos-delay="100">
                <div class="section-title">
                    <h2>Login</h2>
                </div>

                @using (Html.BeginForm())
            {
                    <form role="form" class="php-email-form">
                        <div class="row m-auto">
                            <div class="col-md-6 form-group" style="margin-left:25%">
                                @Html.TextBoxFor(a => a.Username, null, new { @class = "form-control" ,id = "name", placeholder = "User Name" })
                                <br />
                                <br />
                                

                                @Html.TextBoxFor(a => a.Password, null, new { @class = "form-control", id = "password", placeholder = "Password", type = "Password" })
                            </div>
                            
                        </div>
                        <br />
                        <br />
                        <br />
                        <div class="text-center"><input type="submit" class="btn btn-primary" value="Login" /></div>
                    </form>


                }
            </div>

  

        </div>

    </div>
</section><!-- End Contact Section -->
