@model Template.Models.Table
@{
    ViewBag.Title = "Signup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/assets/css/NewStyle.css" rel="stylesheet" />
<br />
<br />
<br />
<br />
<br />
<!-- ======= Contact Section ======= -->
<section id="contact" class="contact">
    <div class="container" data-aos="fade-up">


        <div class="row m-auto mt-1 d-flex justify-content-end" data-aos="fade-right" data-aos-delay="100">


            <div class="col-lg-12 mt-5 mt-lg-0" data-aos="fade-left" data-aos-delay="100">
                

                @using (Html.BeginForm())
            {
                    <form role="form" class="php-email-form">
                        <div class="row m-auto">
                            <div class="section-title">
                                <h2>Sign up</h2>
                            </div>
                            <div class="col-md-6 form-group" style="margin-left:25%">
                                @Html.TextBoxFor(a => a.Firstname, null, new { @class = "form-control", id = "name", placeholder = "First Name" })
                                <br />
                                <br />
                                @Html.TextBoxFor(a => a.Lastname, null, new { @class = "form-control", id = "password", placeholder = "Lastname" })
                                <br />
                                <br />
                                @Html.TextBoxFor(a => a.Email, null, new { @class = "form-control", id = "name", placeholder = "Email" })
                                <br />
                                <br />
                                @Html.TextBoxFor(a => a.Username, null, new { @class = "form-control", id = "password", placeholder = "Username" })
                                <br />
                                <br />
                                @Html.TextBoxFor(a => a.Password, null, new { @class = "form-control", id = "name", placeholder = "Password", type = "Password" })
                                <br />
                                <br />
                                @Html.TextBoxFor(a => a.City, null, new { @class = "form-control", id = "password", placeholder = "City" })
                            </div>

                        </div>
                        <br />
                        <br />
                        <br />
                        <div class="text-center"><input type="submit" class="btn btn-primary" value="Sign up" /></div>
                    </form>


                }
            </div>



        </div>

    </div>
</section><!-- End Contact Section -->


