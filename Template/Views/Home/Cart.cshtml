@model IEnumerable<Template.Models.CartN>
@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/assets/css/NewStyle.css" rel="stylesheet" />
<br />
<br />
<br />
<br />
<!-- ======= Portfoio Section ======= -->
<section id="portfolio" class="portfoio">
    <div class="container" data-aos="fade-up">

        <div class="section-title">
            <h2>Your Cart</h2>
        </div>



        <div class="row portfolio-container">
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet">
            <main id="cart" style="max-width:960px">
                <div class="back"><a href="#">&#11178; shop</a></div>
                <h1>Your Cart</h1>
                <div class="container-fluid">
                    <div class="row align-items-start">
                        <div class="col-12 col-sm-8 items">
                            @foreach (var item in Model)
                            {

                                <div class="cartItem row align-items-start">
                                    <div class="col-3 mb-2">
                                        <img class="w-100" src="~/Content/images/@item.Image" alt="art image">
                                    </div>
                                    <div class="col-5 mb-2">
                                        <h6 class="">@item.Product_Name</h6>
                                        <p class="pl-1 mb-0">@item.Product_Brand</p>
                                        
                                    </div>
                                    <div class="col-2">
                                        <p class="cartItemQuantity p-1 text-center">@item.qty</p>
                                    </div>
                                    <div class="col-2">
                                        <p id="cartItem1Price">Rs. @item.Price</p>
                                        <p id="cartItem1Price">Rs. @item.Total</p>
                                    </div>
                                    <a href="@Url.Action("Delete_Cart","Home",new { id = item.Id})">
                                        <i class="bi bi-trash3-fill" style="text-align:right"></i>
                                    </a>
                                </div>
                                <hr>
                            }
                            <!--1-->




                        </div>
                        <div class="col-12 col-sm-4 p-3 proceed form">
                            <div class="row m-0">
                                <div class="col-sm-8 p-0">
                                    <h6>Subtotal</h6>
                                </div>
                                <div class="col-sm-4 p-0">
                                    <p id="subtotal">Rs. @ViewBag.subtotal</p>
                                </div>
                            </div>
                            <div class="row m-0">
                                <div class="col-sm-8 p-0 ">
                                    <h6>Tax</h6>
                                </div>
                                <div class="col-sm-4 p-0">
                                    <p id="tax">Rs. @ViewBag.tax</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row mx-0 mb-2">
                                <div class="col-sm-8 p-0 d-inline">
                                    <h5>Total</h5>
                                </div>
                                <div class="col-sm-4 p-0">
                                    <p id="total">@ViewBag.Total</p>
                                </div>
                            </div>
                            <a href="@Url.Action("Order","Home")"><button id="btn-checkout" class="shopnow"><span>Checkout</span></button></a>
                        </div>
                    </div>
                </div>
        </div>
        </main>
        <br />
        <br />
        <br />
        <br />
